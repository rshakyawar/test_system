<html style="background :white;">
<body style="background :white">
<div id = "print-wrapper">
  <div style="font-size :18px; text-align :center; font-weight :bold;">H<sub>2</sub>O Solutions</div>
  <div style="padding-bottom :10px;"></div>
  <div class="clear"></div>
  <div style="text-align :center; font-size :16px; font-weight :bold;">Sales Register</div>
  <div style="padding-bottom :10px;"></div>
  <div class="clear"></div>

  <div id="print-table-wrapper">
    <table align="center" border="1px solid" style="border-collapse :collapse;">
      <tr>
        <th width="24px" style="padding :5px;">Sr No.</th>
        <th width="80px">Date</th>
        <th width="70px">Customer Type</th>
        <th width="95px">Customer Name</th>
        <th width="">Address</th>
        <th width="90px">Contact Numbers</th>
        <th width="55px">Amount</th>
      </tr>
      <% if @serial.length > 0 %>
        <% for i in 0...@serial.length %>
          <tr>
            <td width="24px" style="padding :5px; text-align :center;"><%= @serial[i] %></td>
            <td width="70px" style="padding :5px;"><%= @payment_dates[i] %></td>
            <td width="60px" style="padding :5px;"><%= @customer_type[i] %></td>
            <td width="85px" style="padding :5px;"><%= @customer_name[i] %></td>
            <td width="" style="padding :5px;"><%= @address[i] %></td>
            <td width="80px" style="padding :5px;"><%= @contact_numbers[i] %></td>
            <td width="45px" style="padding :5px;"><%= @balance[i] %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>